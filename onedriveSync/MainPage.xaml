<Page
    x:Class="onedriveSync.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:onedriveSync"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="#C3C3C3"
    mc:Ignorable="d">

    <Grid>
        <Button
            x:Name="btn_Login"
            Margin="29,19,0,0"
            VerticalAlignment="Top"
            Background="AliceBlue"
            Click="btn_Login_Click"
            Content="Sign In"
            FontSize="12"
            FontWeight="Bold"
            Foreground="DarkBlue" />

        <Button
            x:Name="btn_GetDriveId"
            Margin="0,19,29,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="AliceBlue"
            Click="btn_GetDriveId_Click"
            Content="Get Drive Id"
            FontSize="12"
            FontWeight="Bold"
            Foreground="DarkBlue"
            Visibility="Collapsed" />

        <TextBox
            x:Name="txtBox_Response"
            Width="300"
            Height="500"
            HorizontalAlignment="Left"
            FontSize="12"
            TextWrapping="Wrap" />

    </Grid>
</Page>
